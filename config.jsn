{
    //
    // common
    //
    
    jsn_vars<linux>:
    {
    	premake: "../pmtech/tools/premake/premake5_linux",
    	texturec: "../pmtech/third_party/texturec/linux/texturec",
    	mesh_opt: "../pmtech/tools/bin/linux/mesh_opt"
    },
    
	jsn_vars<mac>:
    {
    	premake: "../pmtech/tools/premake/premake5",
    	texturec: "../pmtech/third_party/texturec/osx/texturec",
    	mesh_opt: "../pmtech/tools/bin/osx/mesh_opt"
    },
    
    jsn_vars<windows>:
    {
    	premake: "../pmtech/tools/premake/premake5",
    	texturec: "../pmtech/third_party/texturec/win32/texturec",
    	mesh_opt: "../pmtech/tools/bin/win32/mesh_opt"
    },
    
    base: {
        tools: {
            premake: "${premake}",            
            texturec: "${texturec}",
            mesh_opt: "${mesh_opt}",
            pmfx: "${pmtech_dir}/third_party/pmfx-shader/build_pmfx.py",
            models: "${pmtech_dir}/tools/build_scripts/build_models.py",
            jsn: "${pmtech_dir}/tools/build_scripts/jsn/jsn.py"
        },
        
        env: {
            pmtech_dir: "../pmtech/"
        },
        
        jsn_vars: {
        	pmtech_dir: "../pmtech/",
        	data_dir: ""
        },
        
        copy: [
            ["${pmtech_dir}/assets/fonts", "${data_dir}/fonts"]
        ],
        
        models: [
            ["assets/exported/models", "${data_dir}/models"]
        ],
        
        textures: [
            ["assets/exported/textures", "${data_dir}/textures"],
            ["../pmtech/assets/textures", "${data_dir}/textures"]
        ],
        
		jsn: {
			files:[
				["assets/configs", "${data_dir}/configs"],
				["${pmtech_dir}/assets/configs", "${data_dir}/configs"]
			],
			import_dirs:[
				"${pmtech_dir}/assets/configs", "assets/configs"
			]
        }
    },
    
    //
    // mac
    //
    
    mac(base): {        
    	jsn_vars: {
    		data_dir: "bin/osx/data"
    	},
    	
        clean: [
            "build/osx",
            "bin/osx",
            "temp"
        ],
        
        libs: [
            "cd ../pmtech/third_party && ./build_libs.sh osx",
            "cd ../pmtech/tools && pmbuild mac"
        ],
        
        premake: [
            "xcode4",
            "--renderer=metal", 
            "--platform_dir=osx"
        ],
        
        pmfx: [
            "-shader_platform metal",
            "-metal_sdk macosx",
            "-i ../pmtech/assets/shaders",
            "-o bin/osx/data/pmfx/metal",
            "-h shader_structs",
            "-t temp/shaders",
            "-source"
        ]
    },
    
    //
    // iOS
    //
    
    ios(base): {
        jsn_vars: {
    		data_dir: "bin/ios/data"
    	},
    	
    	require_teamid: true,
    	
        clean: [
            "build/ios",
            "bin/ios",
            "temp"
        ],
        
        libs: [
            "cd ../pmtech/third_party && ./build_libs.sh ios",
            "cd ../pmtech/tools && pmbuild mac"
        ],
        
        premake: [
            "xcode4",
            "--renderer=metal", 
            "--platform_dir=ios",
            "--xcode_target=ios"
        ],
        
        pmfx: [
            "-shader_platform metal",
			"-metal_sdk iphoneos",
            "-i ../pmtech/assets/shaders",
            "-o bin/ios/data/pmfx/metal",
            "-h shader_structs",
            "-t temp/shaders",
            "-source"
        ]
    },
    
    //
    // linux
    //
    
    linux(base): {
		jsn_vars: {
    		data_dir: "bin/ios/data"
    	},
        
        clean: [
            "build/linux",
            "bin/linux",
            "temp"
        ],
        
        libs: [
            "cd ../pmtech/third_party && ./build_libs.sh linux",
        ],
        
        premake: [
            "gmake",
            "--renderer=opengl", 
            "--platform_dir=linux"
        ],
        
        pmfx: [
            "-shader_platform glsl",
            "-shader_version 330",
            "-i ../pmtech/assets/shaders",
            "-o bin/linux/data/pmfx/metal",
            "-h shader_structs",
            "-t temp/shaders",
            "-source"
        ]
    }
}
